	<div class="container">
		<div class="row" style="padding-top: 2%">
			<div class="col-lg-2" align="center">
			</div>
			<div class="col-lg-8" align="center">
				<div class="jumbotron" height="90%" style="margin-top:3%; margin-bottom:3%; padding-bottom:4%; padding-top:4%">
					
					
					<div class="row" style="padding-top: 2%; padding-bottom: 2%;">
						<div class="col-lg-6" align="center">

							<div class="card" text-align:"center">
								<center>
									<img class="card-img-top" src="<%= @campaign.brand_image.url(:medium) %>" alt="image is broken" align:"center" width="75%" style="margin-top: 5%; margin-right: 5%; margin-left: 5%; ">
									<hr style="margin-top:0%; margin-bottom:0%">
									<div class="card-block" style="padding-bottom: 2%; padding-top: 2%">
										<h2 class="lead text-xs-center" style="padding-bottom: 0%; margin-bottom: 0%; font-size: 1.66em" >
											<%= @campaign.campaign_name %>
										</h2>


									</div>
								</center>

							</div>

						</div>
						<% if Time.now < @campaign.expiration_date %>
						<h1 class="display-4" style="font-size: 2.25em; text-align: center">
							Saved to Pouch
						</h1>
						<% else %>
						<h1 class="display-4" style="font-size: 2.25em; text-align: center">
							Deal has Expired
						</h1>
						<% end %>

						<div class="col-lg-6" align="center">

							<div text-align="left" style="margin-top: 0%; margin-bottom: 0%" >

								<hr style=" margin-bottom:3%; margin-top:0%">

								<p class="lead text-justify" style=" font-size: 1.1em; margin-bottom:0%; margin-right:5%; margin-left:5%" >
									Download our iOS app for easy access to your deals. Enable push notifications to receive reminders as deals expire.
									
								</center>
							</p>

							<div text-align="center" style="margin-top:3%">

								<%= link_to image_tag("app_store_badge.svg", height: '55', alt: "image is broken"), "https://itunes.apple.com/us/app/pouch!/id1129131870", id: "app_download", target: "_blank" %>
								
							</div>
							<p class="lead" text-align="center" style="margin-bottom:0%; margin-top:0%">
								or 
							</p>



							<!-- START OF BUTTON -->
							<% if @campaign.promo_code.blank? %>
							<a href="<%= @campaign.campaign_url %>" align="center" class="btn btn-primary" target="_blank" style="margin-bottom:5%">
								Continue Shopping
							</a>
							<% else %>


							<!-- begin modal  -->

							<!-- Button trigger modal -->
							<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#shop_now" id="promo_code_clipboard" data-clipboard-text='<%= @campaign.promo_code %>' style="margin-bottom:5%" >
								Shop promo code 
								<br>
								"<%= @campaign.promo_code %>"
							</button>
							<script>
							$(document).ready(function() {
								var clip = new ZeroClipboard($("#promo_code_clipboard"))
							});  
							</script>


							<!-- Modal -->
							<div class="modal fade" id="shop_now" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">
													&times;
												</span>
											</button>

										</div>
										<div class="lead text-xs-center">
											<br>
											Copy promo code
											<br>
											<textarea rows="1" cols="<%= @campaign.promo_code.length %>" readonly style="margin-top:10px;resize: none"><%= @campaign.promo_code %></textarea>
											<br>
											then continue shopping
											<br><br>
										</div>
										<div class="modal-footer">
											<a href="<%= @campaign.campaign_url %>" class="btn btn-primary"  target="_blank" role="button" id='shop_now' data-clipboard-text='<%= @campaign.promo_code %>'>
												Continue Shopping
											</a>
										</div>
									</div>
								</div>
							</div>

							<!-- end of modal  -->
							<br>
							<% end %>
							<!-- END OF BUTTON -->
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>