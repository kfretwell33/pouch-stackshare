<% content_for :head do %>

<title>
  <%= @campaign.campaign_name %>
</title>
<meta property="og:description" content="<%= @campaign.fb_description %>" />
<% end %>


<body>

  <div class="container" style="padding-bottom: 0%;padding-top: 4%">
    <div class="row">

      <div class="col-lg-1">
      </div>
      <div class="col-lg-5">
        <h2 >
          Details
        </h2>
        <hr>
        <div class="table-responsive">
          <center>
            <table class="table table-bordered">
              <tr>                          
                <th>
                 Campaign
               </th>
               <td>
                 <%= @campaign.campaign_name %> 
               </td>
               <tr>
                <th>
                 Campaign URL
               </th>
               <td>
                 <%= link_to @campaign.campaign_url, @campaign.campaign_url, id: "campaign_url", target: "_blank" %>
               </td>
               <tr>
                <th>
                 <% if Time.now < @campaign.expiration_date %>
                 Expires
                 <% else %>
                 Expired
                 <% end %>
               </th>
               <td>
                 <% if Time.now < @campaign.expiration_date %>
                 <div class="text-success">
                  <%= @campaign_expiration_display %>
                  
                </div>
                <% else %>
                <div class="text-danger">
                  <%= @campaign_expiration_display %>
                </div>
                <% end %>
              </td>
              <tr>
                <th>
                 Description 
               </th>
               <td>
                 <%= @campaign.description %> 
               </td>
               <tr>
                <th>
                 Promo Code 
               </th>
               <td>
                 <%= @campaign.promo_code %>
               </td>
               <tr>
                <th>
                 Message 1 
               </th>
               <td>
                 <%= @campaign.alert_one %> 
               </td>
               <tr>
                <th>
                 Message 1 Send Date 
               </th>
               <td> 
                <%= @campaign_send_date_one_display %> 
              </td>
              <tr>
                <th> 
                  Message 2
                </th>
                <td>
                 <%= @campaign.alert_two %> 
               </td>
               <tr>
                <th>
                 Message 2 Send Date 
               </th>
               <td>
                 <%= @campaign_send_date_two_display %> 
               </td>
               <tr>
                <th>
                 Facebook Description 
               </th>
               <td>
                 <%= @campaign.fb_description %> 
               </td>
               
               <tr>
                <th>
                  Facebook Image
                </th>
                <td>
                  <% if @campaign.fb_image_file_name? %>
                  <%= image_tag @campaign.fb_image.url(:medium), :alt => 'image is broken' %>
                  <% end %>
                </td>
                
              </table>
            </center>
          </div>
        </div>
        <div class="col-lg-1">
        </div>
        



        <div class="col-lg-5">
         <h2>
          Resources 
          <!-- initialize JS for tooltip popover stying -->
          <script type="text/javascript">
          $(function () {
            $('[data-toggle="tooltip"]').tooltip()
          })
