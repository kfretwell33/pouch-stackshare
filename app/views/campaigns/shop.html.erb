<!-- Header info CUSTOM FOR FACEBOOK SHARING-->

<% content_for :head do %>

<title><%= @campaign.campaign_name %></title>
<meta property="og:url" content="<%= @shop_url %>" />
<meta property="og:type" content="website" />
<meta property="fb:app_id" content="760928777377694" />
<meta property="og:title" content="<%= @campaign.campaign_name %>" />
<meta property="og:description" content="<%= @campaign.fb_description %>" />
<meta property="og:site_name" content="<%= @campaign.brand.brand_name %>" />
<!-- set up fb image share photo -->
<% if @campaign.fb_image_file_name %>
	<meta property="og:image" content="<%= @campaign.fb_image.url %>" />
	<meta property="og:image:width" content="<%= @campaign.fb_image_width %>" />
	<meta property="og:image:height" content="<%= @campaign.fb_image_height %>" />
<% else %>
	<meta property="og:image" content="<%= @campaign.brand_image.url %>" />
<% end %>

<% end %>
<!-- End of header info -->


<body>

	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12" style="padding-left: 0%; padding-right: 0%; margin-bottom:-8px;">
				<% if current_user %>
					<%= render 'shop_user_current' %>
				<% else %>
					<%= render 'shop_user_logged_out' %>
				<% end %>	
			</div>
		</div>
	</div>


	<iframe src="<%= @campaign.campaign_url %>" name="<%= Time.now %>" style="border:none; position:absolute; width:100%; height:90%">
			<!-- NOTES about iframe: 1) if pouch-app.com is on https, the iframe has to be as well 2) using "name=" so that chrome doesn't chache the iframe-->
	<p>
		Your browser does not support iframes.
	</p>
	</iframe>

</body>
