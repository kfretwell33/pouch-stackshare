<% content_for :head do %>

<title>Sign Up</title>
<meta property="og:description" content="Sign Up" />
<% end %>

<div class="container" style="padding-top: 1%;padding-bottom: 6%;">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <h2 class="display-4">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>


      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, error_html: {class: "text-danger"}   %>
        

        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), hint_html: {class: "small text-muted"}, error_html: {class: "text-danger"} %>
        

        <%= f.input :password_confirmation, required: true, error_html: {class: "text-danger"} %>
        

        <%= f.input :brand_name, required: true, label: "Brand Name (will be displayed to users)", error_html: {class: "text-danger"} %>


        <%= f.input :time_zone, required: true, label: "Time Zones", input_html: {class: "c-select"}, error_html: {class: "text-danger"} %>


        Brand Logo<br>
        <%= f.file_field :brand_image, required: true, as: :file, label: "Upload Brand Logo"  %>
        <small class="text-muted">
          <br>
          Please upload a high resolution, closely cropped logo with a transparent background. 
          <br>
          If multiple logo versions exist, square logos typically look best.
          
        </small>
        <br>
        <br>


      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <% end %>

      <!-- 
      <%= render "devise/shared/links" %>
    -->

    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>
