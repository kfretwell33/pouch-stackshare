<% content_for :head do %>

<title>Log In</title>
<meta property="og:description" content="Log In" />
<% end %>


<div class="container"align="center" style="margin-top:2%">
	<div class="col-sm-4">
	</div>
	<div class="col-sm-4">

		<a href="/">
			<img src="/assets/pouch-horizontal-9ef217972054514086c4f344e815e7567d0c8f4b8e1af9c84cfdfec9697b8c0f.png" width="66%" alt="Pouch logo">
		</a>
	</div>
	<div class="col-sm-4">
	</div>
</div>
<hr style="margin-top:2%">

<div class="container">
	<div class="row">
		<div class="col-sm-4">
		</div>
		<div class="col-sm-4" style="margin-top: 15px;">

			<center>
				<%= link_to image_tag("facebook-login.png", height: "55"), "/users/auth/facebook", id: "sign_in"%>
			

			<h6 style="margin-top:3%; margin-bottom:5%">or</h6>
			</center>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<% flash.each do |key, value| %>
      				<div class="alert alert-danger">
        				<%= value %>
      				</div>
      			<% end %>
			<div class="form-inputs">
				<%= f.input :email, required: false, autofocus: true, placeholder: "Email Address", label: false %>
				<%= f.input :password, required: false, placeholder: "Password", label: false %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, "Log in", class: "btn btn-secondary" %>
			</div>
			<% end %>
			<br>
				
					Still need to <%= link_to "sign up?", new_user_registration_path, id: "sign_in"%>
				


		</div>
		<div class="col-sm-4">
		</div>
	</div>
</div>

